{
  "back_buffer_target": "BackBuffer",

  "render_passes": [
    {
      "name": "ClearGBuffer",
      "shader_variation": "clear",
      "render_targets" [
        "GBuffer.Color",
        "GBuffer.Normal",
        "GBuffer.Depth",
        "GBuffer.LightMap"
      ]
    }, {
      "name": "DiffusePass",
      "shader_variation": "diffuse",
      "render_targets" [
        "GBuffer.Color",
        "GBuffer.Normal",
        "GBuffer.Depth"
      ]
    }, {
      "name": "ShadowMapPass",
      "shader_variation": "depthmap",
      "render_targets" []
    }, {
      "name": "LightPass",
      "shader_variation": "lightmap",
      "render_targets" ["GBuffer.LightMap"]
    }, {
      "name": "Present",
      "shader_variation": "present",
      "render_targets" ["BackBuffer"]
    }
  ],

  "render_types": [
    {
      "name": "full-screen",
      "shader": "full-screen",
      "render_passes": [
        "ClearGBuffer",
        "Present"
      ]
    }, {
      "name": "render-object",
      "shader": "diffuse",
      "render_passes": [
        "DiffusePass",
        "ShadowMapPass"
      ]
    }, {
      "name": "point-light",
      "shader": "point-light",
      "render_passes": [
        "LightPass"
      ]
    }, {
      "name": "directional-light",
      "shader": "directional-light",
      "render_passes": [
        "LightPass"
      ]
    }
  ]
}
